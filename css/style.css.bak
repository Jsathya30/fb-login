*{
	padding:0;
	margin:0;
	box-sizing:border-box;
	font-family: 'Roboto', sans-serif;
}
#a{
	height:100vh;
}
.container{
	width:60%;
	padding:80px 20px;
	margin:auto;
	
}
.row{
	width:100%;
	display:flex;
    justify-content:space-between;
}
.col1,.col2{
	width:50%;
	
}
.card2{
	border:2px solid #FFF;
	padding:10px;
	height:50vh;
	border-radius:5px;
	box-shadow:0px 0px 10px #808080;
}

.card1{
	height:50vh;
	padding-top:80px;
}
h2{
	font-size:3rem;
	color:#4169E1;
}
p{
	font-weight:600;
}
.b, .c, .d, .e, .newac{
	padding:10px;
}

.e{
	text-align:center;
	font-weight:bold;
	color:#87CEEB;
}
.newac{
	padding-left:90px;
	padding-top:30px;
}
input{
	padding-top:10px;
	padding-bottom:10px;
	padding-left:5px;
	padding-right:190px;
	border-radius:5px;
	border:1px solid #808080;
	
}
#login{
	padding-top:10px;
	padding-bottom:10px;
	padding-left:150px;
	padding-right:150px;
	border-radius:5px;
	background-color:#4169E1;
	color:#FFF;
	font-weight:bold;
	font-size:1rem;
}
#account{
	padding-left:20px;
	padding-right:20px;
	background-color:#90EE90;
	color:#FFF;
	font-weight:bold;
	font-size:1rem;
}
#login:hover{
	color:#000;
}
.e:hover{
	color:#4169E1;
}




